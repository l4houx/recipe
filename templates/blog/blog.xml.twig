<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
    <channel>
        <title>{{ website_name }} {{ 'blog'|trans }}</title>
        <description>{{ 'Most recent articles published on the '|trans }} {{ website_name }}</description>
        <pubDate>{{ 'now' | date('r', timezone='GMT') }}</pubDate>
        <lastBuildDate>{{ (pagination | last).createdAt | default('now') | date('r', timezone='GMT') }}</lastBuildDate>
        <link>{{ url('blog_list') }}</link>
        <language>{{ app.request.locale }}</language>

        {% for post in pagination %}
            <item>
                <title>{{ post.title }}</title>
                <description>{{ post.content | html_markdown_excerpt(130) }}</description>
                <link>{{ url('blog_article', {'slug': post.slug}) }}</link>
                <guid>{{ url('blog_article', {'slug': post.slug}) }}</guid>
                <pubDate>{{ post.createdAt | formater_datetime('medium', 'short') }}</pubDate>
                <author>{{ post.author.username }}</author>
                {% for keyword in post.keywords %}
                    <category>{{ keyword.name }}</category>
                {% endfor %}
            </item>
        {% endfor %}
    </channel>
</rss>
