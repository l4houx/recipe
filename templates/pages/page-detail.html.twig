{% extends 'page.html.twig' %}

{% set pagetitle = page.title %}
{% block title pagetitle %}

{% block pageheader %}
	<section class="py-8">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8 col-md-12 col-12">
					<div class="text-center">
						<h1 class="display-3 fw-bold">{{ pagetitle }}</h1>
						<p class="lead px-8">{{ 'Views'|trans }}: {{ page.views }}</p>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

{% block content %}
	<section class="pb-8">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8 col-md-12 col-12">
					<div class="py-3 mb-5 border-bottom">
						<h3>
							{{ 'Effective date'|trans }}:
							<span class="text-primary">{{ page.createdAt | ago() }}</span>
						</h3>
					</div>
					<h1 class="fw-bold mb-3"></h1>
					<p class="fs-4 mb-4">{{ page.content | html_markdown }}</p>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
