{% extends 'page.html.twig' %}

{% set bodyClass = 'bg-white' %}
{% set pagetitle = 'Frequently Asked Questions'|trans %}
{% block title pagetitle %}

{% block pageheader %}
    <div class="py-8 bg-light">
        <div class="container">
            <div class="row">
                <div class="offset-md-2 col-md-8 col-12">
                    <h1 class="fw-bold mb-1 display-4">{{ pagetitle }}</h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block content %}
    <section class="py-8">
        <div class="container">
            <div class="row">
                <div class="offset-md-2 col-md-8 col-12">
                    <div class="mb-8 pe-lg-8">
                        <h2 class="mb-4 h1 fw-semibold">{{ 'Most frequently asked questions'|trans }}</h2>
                        <p class="lead">
                            {{ 'Here are the most frequently asked questions you may check before getting started'|trans }}
                        </p>
                    </div>
                    {% if faqs | length > 0 %}
                        <div class="accordion accordion-flush" id="accordionFAQ">
                            {% for faq in faqs %}
                                <div class="border p-3 rounded-3 mb-2" id="heading-{{ faq.id }}">
                                    <h3 class="mb-0 fs-4">
                                        <a href="#" class="d-flex align-items-center text-inherit {{ (loop.first ) ? 'active' : '' }}" data-bs-toggle="collapse" data-bs-target="#collapse-{{ faq.id }}" aria-expanded="false" aria-controls="collapse-{{ faq.id }}">
                                            <span class="me-auto">{{ faq.question }}</span>
                                            <span class="collapse-toggle ms-4">
                                                <i class="bi bi-chevron-down"></i>
                                            </span>
                                        </a>
                                    </h3>
                                    <div id="collapse-{{ faq.id }}" class="collapse" aria-labelledby="heading-{{ faq.id }}" data-bs-parent="#accordionFAQ">
                                        <div class="pt-2">{{ faq.answer | html_markdown }}</div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        {% include "global/message.html.twig" with { type: "info", message: ('No faqs found'|trans), icon: "bi bi-exclamation-circle" } %}
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <section class="py-8">
        <div class="container">
            <div class="row">
                <div class="offset-lg-2 col-lg-4 col-12">
                    <div class="mb-8">
                        <h2 class="mb-0 h1 fw-semibold">{{ "Can't find what you're looking for?"|trans }}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="offset-lg-2 col-lg-8 col-12">
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="card h-100 border mb-md-0 mb-4">
                                <div class="card-body">
                                    <div class="mb-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-help-circle text-primary">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                                            <line x1="12" y1="17" x2="12.01" y2="17"></line>
                                        </svg>
                                    </div>
                                    <h3 class="mb-2 fw-semibold">{{ 'Contact us'|trans }}</h3>
                                    <p>
                                        {{ website_name }} {{ 'is here to help. We can provide you with the support you need. Just contact us and our team will reply quick to you.'|trans }}
                                    </p>
                                    <a href="{{ path('contact') }}" class="btn btn-primary btn-sm">
                                        {{ 'Contact us'|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="card h-100 border">
                                <div class="card-body">
                                    <div class="mb-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#754ffe" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-life-buoy text-primary">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <circle cx="12" cy="12" r="4"></circle>
                                            <line x1="4.93" y1="4.93" x2="9.17" y2="9.17"></line>
                                            <line x1="14.83" y1="14.83" x2="19.07" y2="19.07"></line>
                                            <line x1="14.83" y1="9.17" x2="19.07" y2="4.93"></line>
                                            <line x1="14.83" y1="9.17" x2="18.36" y2="5.64"></line>
                                            <line x1="4.93" y1="19.07" x2="9.17" y2="14.83"></line>
                                        </svg>
                                    </div>
                                    <h3 class="mb-2 fw-semibold">{{ 'Support'|trans }}</h3>
                                    <p>
                                        {{ "The good news is that you’re not alone, and you’re in the right place. Contact us for more detailed support."|trans }}
                                    </p>
                                    <a href="{{ path('help_center') }}" class="btn btn-outline-secondary btn-sm">
                                        {{ 'Submit a Ticket'|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
