{% extends 'help.html.twig' %}

{% form_theme form '@EWZRecaptcha/Form/ewz_recaptcha_widget.html.twig' %}

{% set bodyClass = 'bg-white' %}
{% set pagetitle = 'Help Center Support'|trans %}
{% block title pagetitle %}

{% block pageheader %}
    <div class="py-8 bg-light">
        <div class="container">
            <div class="row">
                <div class="offset-md-2 col-md-8 col-12">
                    <h1 class="fw-bold mb-1 display-4">{{ pagetitle }}</h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [{ "help_center": ('Help center'|trans), "current":(pagetitle) }] %}
    {% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block content %}
    <section class="py-8">
        <div class="container my-lg-4">
            <div class="row">
                <div class="offset-md-2 col-md-8 col-12">
                    <div class="mb-3">
                        <p class="lead mb-8">
                            {{ "Can't find the answer you're looking for? Don't worry! Get in touch with the Docs Support team, we will be glad to assist you."|trans }}
                        </p>
                        <div class="d-flex justify-content-between">
                            <span>{{ 'Contact Information'|trans }}</span>
                            <div class="text-end">
                                <span>{{ phone }}</span>
                                <a href="javascript:void;">{{ email }}</a>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="card border">
                            <div class="card-body p-5">
                                <h2 class="mb-4 fw-semibold">{{ 'Submit a Request'|trans }}</h2>
                                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                                    <div class="mb-3">
                                        {{ form_row(form.name) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_row(form.email) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_row(form.service) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_row(form.message) }}
                                    </div>
                                    {% if '1' == settings['google_recaptcha_enabled'] %}
                                        <div class="mb-3">
                                            {{ form_widget(form.recaptcha) }}
                                            {{ form_errors(form.recaptcha) }}
                                        </div>
                                    {% endif %}
                                    <button class="btn btn-primary" type="submit">{{ 'Submit'|trans }}</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
