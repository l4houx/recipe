<button class="btn btn-light btn-icon rounded-circle d-flex align-items-center" type="button" aria-expanded="false" data-bs-toggle="dropdown" aria-label="{{ 'Toggle auth (auto)'|trans }}">
	<i class="bi theme-icon-active">
		<i class="bi theme-icon bi bi-person-vcard-fill"></i>
	</i>
	<span class="visually-hidden bs-theme-text">{{ 'Toggle auth'|trans }}</span>
</button>
<ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="bs-theme-text">
	<li>
        <a href="{{ path('login', {redirect: app.request.pathInfo}) }}" class="dropdown-item d-flex align-items-center">
            <i class="bi theme-icon bi bi-door-open-fill"></i>
            <span class="ms-2">{{ 'Sign in'|trans }}</span>
        </a>
	</li>
	<li>
        <a href="{{ path('register') }}" class="dropdown-item d-flex align-items-center">
            <i class="bi theme-icon bi bi-door-closed-fill"></i>
            <span class="ms-2">{{ 'Sign up'|trans }}</span>
        </a>
	</li>
	<li>
        <a href="{{ path('register_restaurant') }}" class="dropdown-item d-flex align-items-center">
            <i class="bi theme-icon bi bi-door-closed-fill"></i>
            <span class="ms-2">{{ 'Sign up restaurant'|trans }}</span>
        </a>
	</li>
</ul>
