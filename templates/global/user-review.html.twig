                </span>
                <span class="me-1">{{ 'for'|trans }}</span>
                <span class="h5">{{ review.headline }}</span>
                <p class="mt-2">{{ review.content | html_markdown_excerpt() }}</p>
                <a href="#" class="btn btn-outline-secondary btn-sm">Respond</a>
            </div>
        </div>
    </div>
