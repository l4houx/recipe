<li class="list-group-item px-0 py-4 {{ review.id is odd ? 'pb-0' }}">
    <div class="d-flex">
        {% if showuser is defined %}
            {% include "global/user-avatar.html.twig" with { user: review.user, type: "lg" } %}
        {% endif %}
        <div class="ms-3 mt-2">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    {% if showuser is defined %}
                        <h4 class="mb-0">{{ review.author.getFullName | lower | capitalize }}</h4>
                    {% endif %}
                    <span>
                        {{ review.createdat | ago }}
                        {% if showrecipe is defined %}
                            <a href="{{ path('recipe_show', { slug : review.recipe.slug, id : review.recipe.id }) }}" class="text-inherit">{{ review.recipe.title }}</a>
                        {% endif %}
                    </span>
                </div>
                <div>
                    <a href="#" data-bs-toggle="tooltip" data-placement="top" aria-label="{{ 'Report Abuse'|trans }}" data-bs-original-title="{{ 'Report Abuse'|trans }}">
                        <i class="bi bi-flag"></i>
                    </a>
                </div>
            </div>
            <div class="mt-2">
                <span class="fs-6 me-1 align-top">
