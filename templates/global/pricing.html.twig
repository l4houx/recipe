{% set pricings = repository('App\\Entity\\Pricing', 'findAllPricing') %}

{% for pricing in pricings %}
    <div class="col-lg-4">
        <div id="plan{{ pricing.id }}" class="card border-0 mb-3 mb-lg-0">
            <div class="p-5 text-center">
                <img src="../assets/images/svg/price-icon-3.svg" alt="icon" class="mb-5">
                <div class="mb-5">
                    <h2 class="fw-bold">{{ pricing.title }}</h2>
                    <p class="mb-0">{{ pricing.subtitle }}</p>
                </div>
                <div class="d-flex justify-content-center mb-4">
                    <span class="h3 mb-0 fw-bold">{{ pricing.symbol }}</span>
                    <div class="toggle-price-content h1 odometer odometer-auto-theme">
                        <div class="odometer-inside">
                            <span class="odometer-digit">
                                <span class="odometer-digit-spacer">{{ pricing.price }}</span>
                                <span class="odometer-digit-inner">
                                    <span class="odometer-ribbon">
                                        <span class="odometer-ribbon-inner">
                                            <span class="odometer-value"></span>
                                        </span>
                                    </span>
                                </span>
                            </span>
                        </div>
                    </div>
                    <span class="align-self-end mb-1 ms-2 toggle-price-content">/{{ pricing.monthly }}</span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-{{ pricing.btn }}" plan="{{ pricing.id }}" price="{{ pricing.price }}" duration="{{ pricing.duration }}" {# stripe-key="{{ stripeKey() }}" paypal-id="{{ paypalClientId() }} #}>
                        {{ 'Go'|trans }} ({{ pricing.subtitle }})
                    </button>
                </div>
            </div>
            <hr class="m-0">
            <div class="p-5">
                <h4 class="fw-bold mb-4">Everything in Individual, plus:</h4>
                <ul class="list-unstyled mb-0">
