<div class="card-body border-top py-3">
	<a class="fs-5 text-dark fw-semibold" data-bs-toggle="collapse" href="#collapseNewsletter" role="button" aria-expanded="false" aria-controls="collapseNewsletter">
		{{ 'Sign up for our Newsletter'|trans }}
		<span class="float-end">
			<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-chevron-down" viewbox="0 0 16 16">
				<path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"></path>
			</svg>
		</span>
	</a>
	<div class="collapse show" id="collapseNewsletter">
		<div class="mt-3">
			<form class="needs-validation" novalidate="">
				<div class="mb-3">
					<label for="newsletter-email" class="form-label visually-hidden">{{ 'Email Address'|trans }}</label>
                    <input type="email" id="newsletter-email" class="form-control newsletter-email" placeholder="{{ 'Email Address'|trans }}" required="true">
				</div>
				<div class="d-grid">
					<button id="newsletter-subscribe" {# data-target="{{ path('newsletter_subscribe') }}" #} type="button" class="btn btn-primary">{{ "Subscribe"|trans|upper }}</button>
				</div>
			</form>
		</div>
	</div>
</div>
