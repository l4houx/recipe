{% extends 'dashboard.html.twig' %}

{% set pagetitle = 'Edit your restaurant profile'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard'|trans), "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    {% if is_granted('ROLE_VERIFIED') %}
                        <a href="" class="btn btn-primary me-2">{{ 'Create'|trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-9 col-lg-8 col-md-12 col-12">
            <div class="card">
                <div class="card border-0 mb-4">
                    <div class="card-header">
                        <h4 class="mb-0">
                            {{ pagetitle }} 
                        </h4>
                    </div>
                </div>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'row gx-3 needs-validation'} }) }}
                    {{ form_widget(form._token) }}
                    {{ form_errors(form) }}
                    <div class="card-body">
                        <div>
                            {% include "global/message.html.twig" with { type: "info", icon: "bi bi-exclamation-circle", message: ("The fields preceded with a red * are mandatory"|trans) } %}
                            {% include "global/message.html.twig" with { type: 'dark', icon: 'bi bi-exclamation-circle', message: ('<a href="'~ path('restaurant', {'slug': app.user.restaurant.slug}) ~'">' ~ 'Click here'|trans ~ '</a> ' ~ 'to preview your profile'|trans) } %}
                        </div>
                        {{ form_widget(form) }}
                        <div class="col-12 pt-2">
                            <button type="submit" class="btn btn-primary">{{ 'Create'|trans }}</button>
                        </div>
                    </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
        <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
    </div>
{% endblock %}
