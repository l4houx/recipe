{% extends 'dashboard.html.twig' %}

{% set pagetitle = 'Recipes on sale'|trans %}
{% block title pagetitle %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: none;
            width: 100% !important;
            padding-right: 15px !important;
            padding-left: 15px !important;
            margin-right: auto !important;
            margin-left: auto !important;
        }
    </style>
{% endblock %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block content %}
    {% if rows.getTotalItemCount > 0 %}
        <div class="card mb-4">
            <div class="card-body">
                <div class="row gx-3">
                    <div class="col-lg-3 col-md-5 col-12 mb-lg-0 mb-2">
                        <span>{{ "%resultsCount% recipe(s) currently on sale"|trans({'%resultsCount%': rows.getTotalItemCount}) }}</span>
                    </div>
                    <div class=" col-lg-9 col-md-7 col-12">
                        {% set anRecipehasRecipeDateWithSeatingPlan = false %}
                        {% for recipe in rows if recipe.hasAnRecipeDateOnSale %}
                            {% set anRecipehasRecipeDateWithSeatingPlan = true %}
                        {% endfor %}
                        <button id="pos-save-order-button" class="btn btn-primary {% if anRecipehasRecipeDateWithSeatingPlan %}an-recipe-date-has-seating-plan{% endif %}">
                            <i class="bi bi-arrow-down"></i> {{ "Save order"|trans }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-12">
            {% if rows.getTotalItemCount > 0 %}
                <div class="accordion accordion-flush" id="accordionRecipe">
                    <form id="pos-order-form" action="{{ path('dashboard_pointofsale_cart_add') }}" method="post">
                        {% for recipe in rows if recipe.hasAnRecipeDateOnSale %}
                            <div class="card">
                                <div class="card-header" id="heading-{{ recipe.slug }}">
                                    <div class="row h-100">
                                        <div class="col-12 col-md-9 ">
                                            {% include "global/recipe-preview-horizontal.html.twig" with { recipe: recipe, hiderestaurant: true } %}
                                        </div>
                                        <div class="col-12 col-md-3 my-auto">
                                            <button type="button" class="btn btn-light btn-sm float-end" data-bs-toggle="collapse" data-bs-target="#collapse-recipe-{{recipe.reference}}">
                                                <i class="bi bi-plus"></i> {{ "Show recipe dates and subscriptions"|trans }}
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div id="collapse-recipe-{{recipe.reference}}" class="collapse" aria-labelledby="heading-{{ recipe.slug }}" data-bs-parent="#accordionRecipe">
                                    <div class="card-body">
                                        {% for recipeDate in recipe.recipedates if recipeDate.isOnSaleByPos(app.user.pointofsale) %}
                                            <div class="card {% if recipeDate.hasSeatingPlan %}has-seating-plan{% endif %}">
                                                <div class="card-header">
                                                    <i class="bi bi-alarm fa-fw"></i> {{ recipeDate.startdate | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                                    <i class="bi bi-pin-map fa-fw"></i>
                                                    {% if recipeDate.venue %}
                                                        {{ recipeDate.venue.name }}: {{ recipeDate.venue.stringifyAddress }}
                                                    {% else %}
                                                        {{ "Online"|trans }}
                                                    {% endif %}
                                                </div>
                                                <div class="card-body">
                                                    {% if recipeDate.hasSeatingPlan %}
                                                        <div class="mb-3">
                                                            {% include "dashboard/shared/venue/seatingPlans/seating-plan-seats.html.twig" with {seatingPlan: recipeDate.seatingPlan} %}
                                                        </div>
                                                    {% endif %}

                                                    {% for subscription in recipeDate.subscriptions %}
                                                        {% if subscription.isActive %}
                                                            <div class="mb-2">
                                                                <b>{{ subscription.name }}</b>
                                                                {% if subscription.description %}
                                                                    <i class="bi bi-exclamation-circle text-primary ml-2" data-bs-toggle="tooltip" title="{{ subscription.description }}"></i>
                                                                {% endif %}
                                                                {% if not subscription.isOnSale %}
                                                                    <span class="badge bg-{{ subscription.stringifyStatusClass }}-soft ml-5">
                                                                        {{ subscription.stringifyStatus|trans }}
                                                                    </span>
                                                                {% endif %}
                                                            </div>
                                                            <div class="fw-bold mb-2">
                                                                {{ subscription.free ? "Free"|trans : ((settings['currency_position'] == 'left' ? settings['currency_symbol'] : '') ~ subscription.getSalePrice ~ (settings['currency_position'] == 'right' ? settings['currency_symbol'] : '')) }}
                                                                {% if subscription.promotionalprice and not subscription.free %}
                                                                    <del class="mb-0">
                                                                        {{ (settings['currency_position'] == 'left' ? settings['currency_symbol'] : '') ~ ticket.getPrice() ~ (settings['currency_position'] == 'right' ? settings['currency_symbol'] : '') }}
                                                                    </del>
                                                                {% endif %}
                                                            </div>
                                                            {% if subscription.salesstartdate %}
                                                                <div class="mb-2">
                                                                    {% if subscription.salesstartdate|date("Y/m/d H:i") > "now" | date("Y/m/d H:i") %}
                                                                        <small class="text-danger fs-6 mt-1">
                                                                            {{ "Sales start in"|trans }}
                                                                            <span class="countdown" data-count-down-to="{{ subscription.salesstartdate | date('Y/m/d H:i') }}"></span>
                                                                        </small>
                                                                    {% else %}
                                                                        <small class="text-success fs-6 mt-1">
                                                                            {{ "Sales started"|trans }}
                                                                            {{ subscription.salesstartdate | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                                                        </small>
                                                                    {% endif %}
                                                                </div>
                                                            {% endif %}

                                                            {% if subscription.salesenddate and subscription.salesstartdate | date("Y/m/d H:i") <= "now"|date("Y/m/d H:i") %}
                                                                <div class="mb-2">
                                                                    {% if subscription.salesenddate|date("Y/m/d H:i") < "now"|date("Y/m/d H:i") %}
                                                                        <small class="text-danger fs-6 mt-1">
                                                                            {{ "Sales ended"|trans }}
                                                                            <span>
                                                                                {{ subscription.salesenddate | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                                                            </span>
                                                                        </small>
                                                                    {% else %}
                                                                        <small class="text-danger fs-6 mt-1">
                                                                            {{ "Sales end"|trans }}
                                                                            <span class="countdown" data-count-down-to="{{ subscription.salesenddate|date('Y/m/d H:i') }}"></span>
                                                                        </small>
                                                                    {% endif %}
                                                                </div>
                                                            {% endif %}

                                                            <div class="mb-2">
                                                                <input type="text" class="form-control touchspin-integer pos-recipedate-subscription-qte recipedate-subscription-qte" name="{{ subscription.reference }}" data-subscription-id="{{ subscription.id }}" data-min="0" data-max="{{ subscription.getSubscriptionsLeftCount }}" {% if not subscription.isOnSale %}disabled{% endif %} />
                                                            </div>

                                                            <div class="fw-bold mb-2">
                                                                <small class="text-dark">{{ "Subscriptions left"|trans }}: 
                                                                    {{ subscription.getSubscriptionsLeftCount }} / 
                                                                    {{ Subscription.quantity }}
                                                                </small>
                                                                <br>
                                                                <small class="text-dark">
                                                                    {{ "Scanned Subscriptions"|trans }}: 
                                                                    {{ subscription.getScannedSubscriptionsCount }} / 
                                                                    {{ subscription.getOrderElementsQuantitySum }}
                                                                </small>
                                                            </div>

                                                            {% if not loop.last %}
                                                                <hr class="mt-5 mb-5">
                                                            {% endif %}
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </form>
                </div>
            {% else %}
                <div class="card-footer">
                    {% include "global/message.html.twig" with { type: "dark", message: ('No recipes found'|trans), icon: "bi bi-exclamation-circle", class: "my-2" } %}
                </div>
            {% endif %}
            {{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
        </div>
    </div>

    {% for recipe in rows if recipe.hasAnRecipeDateOnSale %}
        {% if recipe.hasAnRecipeDateOnSale %}
            {% for recipeDate in recipe.recipedates if recipeDate.isOnSale %}
                {% if recipeDate.hasSeatingPlan %}
                    {% include "dashboard/shared/venue/seatingPlans/seating-plan-sections-modals.html.twig" with {seatingPlan: recipeDate.seatingPlan, recipeDate: recipeDate} %}
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $(".collapse.show").each(function () {
                $(this).prev(".card-header").find(".bi").addClass("bi-dash").removeClass("bi-plus");
            });
            $(".collapse").on('show.bs.collapse', function () {
                $(this).prev(".card-header").find(".bi").removeClass("bi-plus").addClass("bi-dash");
            }).on('hide.bs.collapse', function () {
                $(this).prev(".card-header").find(".bi").removeClass("bi-dash").addClass("bi-plus");
            });
        });
    </script>
{% endblock %}
