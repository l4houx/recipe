{% extends 'dashboard.html.twig' %}

{% set pagetitle = 'My testimonials'|trans %}
{% block title pagetitle %}

{% block content %}
    <div class="card mb-4">
        <div class="d-lg-flex justify-content-between align-items-center card-header">
            <div class="mb-3 mb-lg-0">
                <h3 class="mb-0">{{ pagetitle }}</h3>
                <span></span>
            </div>
            <div>
                <a href="{{ path('dashboard_account_testimonial_new') }}" class="btn btn-outline-primary btn-sm">
                    {{ 'Create'|trans }}
                </a>
            </div>
        </div>
        {% if rows | length > 0 %}
            <div class="card-body">
                <form class="row gx-3">
                    <div class="col-lg-9 col-md-7 col-12 mb-lg-0 mb-2">
                        <input type="search" class="form-control" placeholder="{{ 'Search...'|trans }}">
                    </div>
                    <div class="col-lg-3 col-md-5 col-12">
                        <select class="form-select">
                            <option value="">Date Created</option>
                            <option value="Newest">Newest</option>
                            <option value="High Rated">High Rated</option>
                            <option value="Law Rated">Law Rated</option>
                            <option value="High Earned">High Earned</option>
                        </select>
                    </div>
                </form>
            </div>
            {% include "dashboard/shared/testimonials/manage-testimonials-table.html.twig" with {rows: rows} %}
        {% else %}
            <div class="card-footer">
                {% include "global/message.html.twig" with { type: "info", message: ('No testimonial found'|trans), icon: "bi bi-exclamation-circle" } %}
            </div>
        {% endif %}
    </div>
{% endblock %}
