{% extends 'dashboard.html.twig' %}

{% set pagetitle = 'Change password'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_creator_account_index": ('My account'|trans), "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    <a href="{{ path('dashboard_creator_account_linked_profiles') }}" class="btn btn-primary me-2">
                        {{ 'Linked Accounts'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="py-6">
        <div class="row">
            <div class="offset-xl-3 col-xl-6 col-md-12 col-12">
                <div class="card">
                    <div class="card-body p-lg-6">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'row gx-3 needs-validation'} }) }}
                            {{ form_widget(form._token) }}
                            {{ form_errors(form) }}
                            <div class="mb-3 col-12">
                                <h4 class="mb-0">{{ 'Edit my password'|trans }}</h4>
                                <p class="mb-4">{{ 'We will send you an email confirmation when you change your password, so please wait for this email after submitting it.'|trans }}</p>
                            </div>
                            <div class="mb-3 col-12">
                                {% include "global/message.html.twig" with { type: "info", icon: "bi bi-exclamation-circle", message: ("The fields preceded with a red * are mandatory"|trans) } %}
                            </div>
                            <div class="mb-3 col-12 col-md-12">
                                {{ form_row(form.currentPassword) }}
                            </div>
                            <div class="mb-3 col-12 col-md-12">
                                {{ form_row(form.newPassword.first) }}
                            </div>
                            <div class="mb-3 col-12 col-md-12">
                                {{ form_row(form.newPassword.second) }}
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">{{ 'Apply changes'|trans }}</button>
                            </div>
                            <div class="col-12 mt-4">
                                <p class="mb-0">
                                    {{ "Can't remember your current password?"|trans }}
                                    <a href="{{ path('forgot_password_request') }}">
                                        {{ 'Reset your password by email'|trans }}
                                    </a>
                                </p>
                            </div>
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
