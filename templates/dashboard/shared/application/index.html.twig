{% extends 'dashboard.html.twig' %}

{% if is_granted('ROLE_ADMIN_APPLICATION') %}
    {% set pagetitle = 'Manage applications'|trans %}
{% elseif is_granted('ROLE_VERIFIED') or is_granted('ROLE_USER') or not is_granted('ROLE_CREATOR') %}
    {% set pagetitle = 'My applications'|trans %}
{% endif %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% if is_granted('ROLE_ADMIN_APPLICATION') or is_granted('ROLE_ADMIN') %}
                    {% set breadcrumb = [{ "dashboard_main": ('Dashboard'|trans), "dashboard_admin_application_index": ('Manage applications'|trans), "current":(pagetitle) }] %}
                {% elseif is_granted('ROLE_VERIFIED') or is_granted('ROLE_USER') or not is_granted('ROLE_CREATOR') %}
                    {% set breadcrumb = [{ "dashboard_main": ('Dashboard'|trans), "dashboard_creator_application_index": ('My applications'|trans), "current":(pagetitle) }] %}
                {% endif %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    {% if is_granted('ROLE_VERIFIED') %}
                        {% if is_granted('ROLE_ADMIN_APPLICATION') %}
                            <a href="{{ path('dashboard_admin_application_new') }}" class="btn btn-primary me-2">
                                {{ 'Create'|trans }}
                            </a>
                        {% elseif is_granted('ROLE_USER') or not is_granted('ROLE_CREATOR') %}
                            <a href="{{ path('dashboard_creator_application_new') }}" class="btn btn-primary me-2">
                                {{ 'Create'|trans }}
                            </a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-1">
                        {{ "%resultsCount% result(s) found"|trans({'%resultsCount%': rows.getTotalItemCount}) }}
                    </h4>
                    <p class="mb-0"></p>
                </div>
                {% if rows.getTotalItemCount > 0 %}
                    {% include "dashboard/shared/application/manage-applications-table.html.twig" with {rows: rows} %}
                {% else %}
                    <div class="card-footer">
                        {% include "global/message.html.twig" with { type: "dark", message: ('No application found'|trans), icon: "bi bi-exclamation-circle", class: "my-2" } %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
