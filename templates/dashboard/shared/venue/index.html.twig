{% extends 'dashboard.html.twig' %}

{% if is_granted('ROLE_ADMIN_APPLICATION') %}
    {% set pagetitle = 'Manage venues'|trans %}
{% else %}
    {% set pagetitle = 'My venues'|trans %}
{% endif %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard'|trans), "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    {% if is_granted('ROLE_VERIFIED') %}
                        {% if is_granted('ROLE_ADMIN_APPLICATION') %}
                            <a href="{{ path('dashboard_admin_venue_new') }}" class="btn btn-primary me-2">
                                {{ 'Create'|trans }}
                            </a>
                        {% elseif is_granted('ROLE_RESTAURANT')  %}
                            <a href="{{ path('dashboard_restaurant_venue_new') }}" class="btn btn-primary me-2">
                                {{ 'Create'|trans }}
                            </a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="p-4 row justify-content-between g-3">
        <div class="mb-4 mb-xl-0 row gx-3">
            <div class="col-12">
                <div class="row justify-content-lg-start">
                    <label class="col-auto col-form-label" for="sortable-select">{{ "Sort by"|trans }}</label>
                    <div class="col-auto">
                        <select class="form-select" aria-label="{{ "Select an option"|trans }}" id="sortable-select" autocomplete="off">
                            <option value="">{{ knp_pagination_sortable(rows, "Creation date"|trans ~ ' (' ~ "desc"|trans ~ ')', "v.createdAt", {"direction": "desc", "criteria": "v.createdAt"}) }}</option>
                            <option value="">{{ knp_pagination_sortable(rows, "Creation date"|trans ~ ' (' ~ "asc"|trans ~ ')', "v.createdAt", {"direction": "asc", "criteria": "v.createdAt"}) }}</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <a href="#search-filters" class="btn btn-primary" data-bs-toggle="collapse" title="{{ "Toggle display the search filters"|trans }}" aria-expanded="false" aria-controls="search-filters">
                            <i class="bi bi-search"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div id="search-filters" class="col-md-12 col-lg-12 text-center mb-3 mb-lg-0 collapse">
            <form class="mt-3">
                <div class="row">
                    <div class="col-12 col-md-4 text-start mb-4">
                        <label class="form-label" for="keyword">
                            {{ "Keyword"|trans }} 
                        </label>
                        <input type="text" class="form-control mr-sm-2 mb-2 mb-sm-0" id="keyword" name="keyword" value="{{ app.request.get('keyword') }}">
                    </div>
                    <div class="col-12 col-md-4 text-start mb-4">
                        <div class="mb-3">
                            <label class="form-label">{{ "Listed on directory"|trans }}</label>
                            <br>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="directory" id="directory-filter-all" value="all">
                                <label class="form-check-label" for="directory-filter-all">{{ "All"|trans }}</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="directory" id="directory-filter-yes" value="1">
                                <label class="form-check-label" for="directory-filter-yes">{{ "Yes"|trans }}</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="directory" id="directory-filter-no" value="0">
                                <label class="form-check-label" for="directory-filter-no">{{ "No"|trans }}</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 text-start mb-4">
                        <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" title="{{ "Search"|trans }}">
                            <i class="bi bi-search"></i>
                        </button>
                        <button type="reset" class="btn btn-primary" data-bs-toggle="tooltip" title="{{ "Reset"|trans }}">
                            <i class="bi bi-dash"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-1">
                        {{ "%resultsCount% result(s) found"|trans({'%resultsCount%': rows.getTotalItemCount}) }}
                    </h4>
                    <p class="mb-0"></p>
                </div>
                {% if rows.getTotalItemCount %}
                    {% include "dashboard/shared/venue/manage-rows-table.html.twig" with {rows: rows} %}
                {% else %}
                    <div class="card-footer">
                        {% include "global/message.html.twig" with { type: "dark", message: ('No rows found'|trans), icon: "bi bi-exclamation-circle", class: "my-2" } %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            if (getURLParameter('directory') != "null") {
                $('input[type="radio"][name="directory"][value="' + getURLParameter('directory') + '"]').attr("checked", "checked");
            }
        });
    </script>
{% endblock %}
