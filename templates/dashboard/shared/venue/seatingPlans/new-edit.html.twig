{% extends 'dashboard.html.twig' %}

{# {% form_theme form 'form/jquery.collection.html.twig' %} #}

{% set pagetitle = 'Add a new seating plan'|trans %}
{% if venue.id %}{% set pagetitle = 'Update the seating plan'|trans %}{% endif %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard'|trans), "dashboard_restaurant_venue_index": ('My venues'|trans), "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    {% if is_granted('ROLE_VERIFIED') %}
                        <a href="{{ path('dashboard_restaurant_venue_index') }}" class="btn btn-outline-secondary me-2">
                            {{ 'Return to list'|trans }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-9 col-lg-8 col-md-12 col-12">
            <div class="card border-0 mb-4">
                <div class="card-header">
                    <h4 class="mb-0">{{ pagetitle }}</h4>
                </div>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                    {{ form_errors(form) }}
                    {{ form_widget(form._token) }}
                    <div class="card-body">
                        <div class="row">
                            <div>
                                {% include "global/message.html.twig" with { type: "dark", message: ('<ul><li>Make sure to place the stage and the sections within the designer</li><li>Once assigned to an recipe date, a seating plan can not be edited anymore, you can duplicate it and create a new version and apply the desired changes to the duplicated version.</li></ul>'|trans), icon: "bi bi-exclamation-circle", class: "my-2" } %}
                            </div>
                            <div class="col-12">
                                <div id="seating-plan-designer-container" {% if app.request.get('_route') == 'dashboard_restaurant_venue_seating_plans_edit' %}data-design-to-edit="{{ seatingPlan.design|json_encode() }}"{% endif %} class="ui-widget-content"></div>
                            </div>
                            <div class="col-12 pt-2">
                                <button id="add-new-section" type="button" class="btn btn-primary">{{ 'Create'|trans }}</button>
                            </div>
                        </div>
                    </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
        <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {

        });
    </script>
{% endblock %}
