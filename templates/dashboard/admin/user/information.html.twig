{% extends 'admin.html.twig' %}

{% set pagetitle = 'Account information'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_admin_user_index": 'Manage users'|trans, "current":(pagetitle) }] %}
                {% include "global/admin-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    <a href="{{ path('dashboard_admin_user_index') }}" class="btn btn-primary me-2">{{ 'Return to list'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-1"></h4>
                    <p class="mb-0"></p>
                </div>
                {% include "dashboard/admin/user/manage-users-infos-table.html.twig" with {user: user} %}
            </div>
        </div>
    </div>
{% endblock %}
