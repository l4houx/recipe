<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>{{ knp_pagination_sortable(rows, '#', 'u.id') }}</th>
				<th>{{ 'User name / Email'|trans }}</th>
				<th>{{ 'Full name / Premium'|trans }}</th>
				<th>{{ 'Last login / IP'|trans}}</th>
				<th>{{ 'Roles'|trans }}</th>
				<th>{{ 'Register duration'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for user in rows %}
				{% set link = path('user_profil', { slug : user.slug }) %}
				<tr>
					<td>{{ user.id }}</td>
					<td>
						<a href="{{ link }}" class="text-inherit">
							<div class="d-flex align-items-center">
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">{{ user.username }}
										{{ user.email }}</h4>
									<span>
										{{ 'Joined the'|trans }}
										{{ user.createdAt ? user.createdAt | format_datetime(pattern="dd MMM. yyyy at kk:mm") }}
									</span>
								</div>
							</div>
						</a>
					</td>
					<td>
						{{ user.getFullName() }}
						{{ user.premium ? user.premiumEnd | ago('for') : '' }}
					</td>
					<td>
						{% if user.lastLogin %}
							{{ user.lastLogin|ago}}
						{% else %}
							{{ "N/A"|trans }}
						{% endif %}
						<br>
						<a href="https://ipinfo.io/{{ user.lastLoginIp }}" target="_blank">{{ user.lastLoginIp }}</a>
						{% if user.lastLoginIp %}
							{{ ipService.getLocation(user.lastLoginIp).emoji ?? '' }}
						{% endif %}
					</td>
					<td>
						{% include "global/user-roles.html.twig" %}
					</td>
					<td>{{ user.registerDuration }}s</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								{% if user.isVerified == false %}
									<form action="{{ path('dashboard_admin_user_verified', {id: user.id}) }}" method="post" class="">
										<button class="dropdown-item" type="submit">
											<i class="bi bi-check dropdown-item-icon"></i>
											{{ 'Confirm'|trans }}
										</button>
									</form>
								{% else %}
									<a class="dropdown-item" href="/?_ninja={{ user.email }}">
										<i class="bi bi-incognito dropdown-item-icon"></i>
										{{ 'Ninja'|trans }}
									</a>
								{% endif %}
								<form action="{{ path('dashboard_admin_user_suspended', {id: user.id}) }}" method="post" onsubmit="return confirm("{{'Are you sure you want to suspend this user ?'|trans }}")">
									<button class="dropdown-item" type="submit" {{ user.premium or user.suspended ? 'disabled' : '' }}>
										<i class="bi bi-person-lock dropdown-item-icon"></i>
										{{ user.suspended ? 'Suspend !'|trans : 'Suspend'|trans }}
									</button>
								</form>
								<a href="#" onclick="event.preventDefault(); confirm("{{ 'Are you sure you want to delete this item?'|trans }}") && document.getElementById('js-user-delete-form').submit();" class="dropdown-item">
									<i class="bi bi-trash dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-user-delete-form" action="{{ path('dashboard_admin_user_delete', {id: user.id}) }}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('user_deletion_' ~ user.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
