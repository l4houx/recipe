{% extends 'admin.html.twig' %}

{% set pagetitle = 'Execute Symfony commands'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "current":(pagetitle) }] %}
                {% include "global/admin-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    <a href="{{ path('dashboard_admin_country_new') }}" class="btn btn-primary me-2">{{ 'Create'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xxl-8 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="mb-6 border-bottom">
                        <h4 class="mb-0">{{ pagetitle }}</h4>
                        <p>{{ "An error might occur if the command execution time reaches your PHP max_execution_time directive"|trans }}</p>
                    </div>
                    <div class="mb-8">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-lg-8 col-12">
                                <div class="d-md-flex">
                                    <div class="ms-md-4 mt-2 mt-lg-0">
                                        <h5 class="mb-1">
                                            <i class="bi bi-arrow-{{ app.request.locale == 'ar' ? 'left' : 'right' }}"></i>
                                            {{ "Clear the application cache for the production environment"|trans }}
                                        </h5>
                                        <span>
                                            {{ "Execute this command after editing a file in the application source code or after modifying a string in the translations files"|trans }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-12 d-grid">
                                <button type="button" class="btn btn-primary ajax-loading" data-bs-title="{{ "Response"|trans }}" data-url="{{ path('dashboard_admin_console_execute_command', {command: 'cache:clear', optionKey: '--env', optionValue: 'prod'}) }}"><i class="bi bi-check"></i> {{ "Execute command"|trans }}</button>
                            </div>
                        </div>
                        <hr class="my-3">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-lg-8 col-12">
                                <div class="d-md-flex">
                                    <div class="ms-md-4 mt-2 mt-lg-0">
                                        <h5 class="mb-1">
                                            <i class="bi bi-arrow-{{ app.request.locale == 'ar' ? 'left' : 'right' }}"></i>
                                            {{ "Clear the application cache for the development environment"|trans }}
                                        </h5>
                                        <span>
                                            {{ "Execute this command if you are in the development mode and the modifications you applied in the application did take effect"|trans }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-12 d-grid">
                                <button type="button" class="btn btn-primary ajax-loading" data-bs-title="{{ "Response"|trans }}" data-url="{{ path('dashboard_admin_console_execute_command', {command: 'cache:clear', optionKey: '--env', optionValue: 'dev'}) }}"><i class="bi bi-check"></i> {{ "Execute command"|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
