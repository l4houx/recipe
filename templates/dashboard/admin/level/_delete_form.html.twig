<a href="#" onclick="event.preventDefault(); confirm({{ 'Are you sure you want to delete this item?'|trans }}) && document.getElementById('js-level-delete-form').submit();" class="dropdown-item">
    <i class="bi bi-trash dropdown-item-icon"></i>
    {{ 'Delete'|trans }}
</a>

<form id="js-level-delete-form" action="{{ path('dashboard_admin_level_delete', {id: level.id}) }}" method="post" class="">
    <input type="hidden" name="_token" value="{{ csrf_token('level_deletion_' ~ level.id) }}">
    <input type="hidden" name="_method" value="DELETE">
</form>
