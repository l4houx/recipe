<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>#</th>
				<th>{{ 'Name'|trans }}</th>
				<th>{{ 'Color'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for status in rows %}
				{% set link = path('dashboard_admin_status_edit', { id : status.id }) %}
				<tr>
					<td>{{ status.id }}</td>
					<td>
						<a href="{{ link }}" class="text-inherit">
							<div class="d-flex align-items-center">
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">{{ status.name }}</h4>
									<span></span>
								</div>
							</div>
						</a>
					</td>
					<td>
						<span class="text-decoration-none" style="color: {{ status.color }};">
                            {{ status.color }}
                        </span>
					</td>
					<td>
						{% if status.isClose %}
							<span class="badge-dot bg-danger me-1 d-inline-block align-middle"></span>
							{{ 'Close'|trans }}
						{% else %}
							<span class="badge-dot bg-success me-1 d-inline-block align-middle"></span>
							{{ 'Opem'|trans }}
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="bi bi-pencil dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-status-delete-form').submit();" class="dropdown-item">
									<i class="bi bi-trash dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-status-delete-form" action="{{ path('dashboard_admin_status_delete', {id: status.id}) }}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('status_deletion_' ~ status.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
