<a href="#" onclick="event.preventDefault(); confirm({{ 'Are you sure you want to delete this item?'|trans }}) && document.getElementById('js-status-delete-form').submit();" class="dropdown-item">
    <i class="bi bi-trash dropdown-item-icon"></i>
    {{ 'Delete'|trans }}
</a>

<form id="js-status-delete-form" action="{{ path('dashboard_admin_status_delete', {id: status.id}) }}" method="post" class="">
    <input type="hidden" name="_token" value="{{ csrf_token('status_deletion_' ~ status.id) }}">
    <input type="hidden" name="_method" value="DELETE">
</form>
