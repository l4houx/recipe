<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>#</th>
				<th>{{ 'Name'|trans }}</th>
				<th>{{ 'Articles count'|trans }}</th>
				<th>{{ 'Icon'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for category in rows %}
				{% set link = path('dashboard_admin_help_center_category_edit', { slug : category.slug }) %}
				<tr>
					<td>{{ category.id }}</td>
					<td>
						<a href="{{ link }}" class="text-inherit">
							<div class="d-flex align-items-center">
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">
										{% if category.parent is not  null %}
											{{ category.parent.name }}
											<i class="bi bi-chevron-right"></i>
											{% if category.parent.parent is not  null %}
												{{ category.parent.parent.name }}
												<i class="bi bi-chevron-right"></i>
											{% endif %}
										{% endif %}
										{{ category.name }}
									</h4>
									<span>
										{{ 'Published'|trans }}
										{{ category.createdAt ? category.createdAt | ago() : '' }}
									</span>
								</div>
							</div>
						</a>
					</td>
					<td>
						<span class="text-decoration-none">{{ category.articles | length }}</span>
					</td>
					<td><i class="{{ category.icon }} fa-2x fa-fw"></i></td>
					<td>
						{% if category.isOnline == false %}
							<span class="badge bg-danger-soft">
								<i class="bi bi-eye-slash"></i>
								{{ "Offline"|trans }}
							</span>
						{% else %}
							<span class="badge bg-success-soft">
								<i class="bi bi-eye"></i>
								{{ "Online"|trans }}
							</span>
						{% endif %}
						{% if category.deletedAt %}
							<span class="badge bg-danger-soft">
								<i class="bi bi-alarm"></i>
								{{ "Deleted"|trans }}
							</span>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="bi bi-pencil dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								{% if category.isOnline == true %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_help_center_category_hide', { slug : category.slug }) }}">
                                        <i class="bi bi-eye-slash dropdown-item-icon"></i>
                                        {{ "Offline"|trans }}
                                    </a>
								{% else %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_help_center_category_show', { slug : category.slug }) }}">
                                        <i class="bi bi-eye dropdown-item-icon"></i>
                                        {{ "Online"|trans }}
                                    </a>
								{% endif %}
                                {% if category.deletedAt %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_help_center_category_restore', { slug : category.slug }) }}">
										<i class="bi bi-trash-fill dropdown-item-icon"></i>
										{{ 'Restore'|trans }}
									</a>
                                    <a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-category-delete-form').submit();" class="dropdown-item">
                                        <i class="bi bi-trash dropdown-item-icon"></i>
                                        {{ 'Delete permanently'|trans }}
                                    </a>
                                    <form id="js-category-delete-form" action="{{ path('dashboard_admin_help_center_category_delete', { slug : article.slug }) }}" method="post" class="">
                                        <input type="hidden" name="_token" value="{{ csrf_token('category_deletion_' ~ category.slug) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                    </form>
                                {% else %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_help_center_category_disable', { slug : category.slug }) }}">
										<i class="bi bi-alarm dropdown-item-icon"></i>
										{{ 'Delete'|trans }}
									</a>
                                {% endif %}
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
