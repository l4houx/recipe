<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>#</th>
				<th>{{ 'Title'|trans }}</th>
				<th>{{ 'Category'|trans }}</th>
				<th>{{ 'Views'|trans }}</th>
				<th>{{ 'Last updated'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for article in rows %}
				{% set link = path('dashboard_admin_help_center_article_edit', { slug : article.slug }) %}
				<tr>
					<td>{{ article.id }}</td>
					<td>
						<a href="{{ path('help_center_article', { slug : article.slug }) }}" target="_blank" class="text-inherit">
							<div class="d-flex align-items-center">
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">
										{{ article.title }}
									</h4>
									<span>
										{{ 'Published the'|trans }}
										{{ article.createdAt ? article.createdAt | format_date('long') : '' }}
									</span>
								</div>
							</div>
						</a>
					</td>
					<td>
						{% if article.category.parent %}
							{% if article.category.parent.parent %}
								{{ article.category.parent.parent.name }}
								<i class="bi bi-chevron-right"></i>
							{% endif %}
							{{ article.category.parent.name }}
							<i class="bi bi-chevron-right"></i>
						{% endif %}
						{{ article.category.name }}
					</td>
					<td>
						<span class="text-decoration-none">{{ article.views }}
							{{ "views"|trans }}
                        </span>
					</td>
					<td>
						{{ article.updatedAt ? article.updatedAt | ago() : '' }}
					</td>
					<td>
						{% if article.isFeatured == false %}
							<span class="badge bg-info-soft">
								<i class="bi bi-star"></i>
								{{ "Featured"|trans }}
							</span>
							<br><br>
						{% endif %}
						{% if article.isOnline == false %}
							<span class="badge bg-danger-soft">
								<i class="bi bi-eye-slash"></i>
								{{ "Offline"|trans }}
							</span>
						{% else %}
							<span class="badge bg-success-soft">
								<i class="bi bi-eye"></i>
								{{ "Online"|trans }}
							</span>
						{% endif %}
						{% if article.deletedAt %}
							<br>
							<br>
							<span class="badge bg-danger-soft">
								<i class="bi bi-alarm"></i>
								{{ "Deleted"|trans }}
							</span>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="bi bi-pencil dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-article-delete-form').submit();" class="dropdown-item">
									<i class="bi bi-trash dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-article-delete-form" action="{# {{ path('dashboard_admin_help_center_article_delete', {id: article.id}) }} #}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('article_deletion_' ~ article.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
