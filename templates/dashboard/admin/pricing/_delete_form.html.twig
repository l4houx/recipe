<a href="#" onclick="event.preventDefault(); confirm({{ 'Are you sure you want to delete this item?'|trans }}) && document.getElementById('js-pricing-delete-form').submit();" class="dropdown-item">
    <i class="bi bi-trash dropdown-item-icon"></i>
    {{ 'Delete'|trans }}
</a>

<form id="js-pricing-delete-form" action="{{ path('dashboard_admin_pricing_delete', {id: pricing.id}) }}" method="post" class="">
    <input type="hidden" name="_token" value="{{ csrf_token('pricing_deletion_' ~ pricing.id) }}">
    <input type="hidden" name="_method" value="DELETE">
</form> 
