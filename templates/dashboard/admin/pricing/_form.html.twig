<div class="card border-0 mb-4">
    <div class="card-header">
        <h4 class="mb-0">
            {{ pagetitle }} 
            {% if app.request.attributes.get('_route') == 'dashboard_admin_pricing_edit' %}
                "{{ pricing.title }}"
            {% endif %}
        </h4>
    </div>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
        <div class="card-body">
            {% if app.request.attributes.get('_route') == 'dashboard_admin_pricing_edit' %}
                <div>
                    <h5 class="mb-3">{{ 'Icon'|trans }}</h5>
                    <img src="{{ pricing.imageName ? asset(pricing.getImagePath) : pricing.getImagePlaceholder }}" alt="{{ pricing.title }}" class="img-4by3-lg rounded">
                </div>
            {% endif %}
            {{ form_widget(form) }}
            <div class="col-12 pt-2">
                <button type="submit" class="{% if pricing.id %}btn btn-warning{% else %}btn btn-primary{% endif %} me-4">
                    {% if pricing.id %}{{ 'Update'|trans }}{% else %}{{ 'Save'|trans }}{% endif %}
                </button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
