<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th># {# {{ knp_pagination_sortable(rows, '#', 'u.id') }} #}</th>
				<th>{{ 'User name / Email'|trans }}</th>
				<th>{{ 'Full name / Premium'|trans }}</th>
				<th>{{ 'Content'|trans }}</th>
				<th>{{ 'Rating'|trans }}</th>
				<th>{{ 'Last updated'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for testimonial in testimonials %}
				{% set link = path('dashboard_admin_testimonial_edit', { id : testimonial.id }) %}
				<tr>
					<td>{{ testimonial.id }}</td>
					<td>
						<a href="{{ link }}" class="text-inherit" target="_blank">
							<div class="d-flex align-items-center">
								<div>
									{% include "global/user-avatar.html.twig" with { user: testimonial.author, type: "xl" } %}
								</div>
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">
										{{ testimonial.author.username }} / {{ testimonial.author.email }}
									</h4>
									<span>
										{{ 'Published'|trans }}
										{{ testimonial.createdAt ? testimonial.createdAt | ago() }}
									</span>
								</div>
							</div>
						</a>
					</td>
					<td>{{ testimonial.author.getFullName() }}</td>
                    <td>{{ testimonial.content | html_markdown_excerpt(40) }}</td>
                    <td>
						{% include 'global/rating.html.twig' with {'rating' : testimonial.rating, 'class' : 'fs-6 align-top'} %}
                    </td>
					<td>
						{{ testimonial.updatedAt ? testimonial.updatedAt | ago() : '' }}
					</td>
					<td>
						{% if testimonial.isOnline == false %}
							<span class="badge bg-danger-soft">
								<i class="bi bi-eye-slash"></i>
								{{ "Offline"|trans }}
							</span>
						{% else %}
							<span class="badge bg-success-soft">
								<i class="bi bi-eye"></i>
								{{ "Online"|trans }}
							</span>
						{% endif %}
						{#  
						{% if testimonial.deletedAt %}
							<span class="badge bg-danger-soft">
								<i class="bi bi-alarm"></i>
								{{ "Deleted"|trans }}
							</span>
						{% endif %}
						#}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="bi bi-pencil dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-testimonial-delete-form').submit();" class="dropdown-item">
									<i class="bi bi-trash dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-testimonial-delete-form" action="{{ path('dashboard_admin_testimonial_delete', {id: testimonial.id}) }}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('testimonial_deletion_' ~ testimonial.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
