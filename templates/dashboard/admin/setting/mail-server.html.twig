{% extends 'dashboard.html.twig' %}

{% set pagetitle = 'Mail server settings'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard'|trans), "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    {% if is_granted('ROLE_VERIFIED') %}
                        <a href="" class="btn btn-primary me-2">{{ 'Create'|trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="d-lg-flex justify-content-between align-items-center card-header">
                    <div class="mb-3 mb-lg-0">
                        <h3 class="mb-0">{{ pagetitle }}</h3>
                        <span>{{ "By clicking on send, an email is going to be sent to the chosen email address. Make sure to save the configuration to be tested before testing."|trans }}</span>
                    </div>
                    <div>
                        <a href="{{ path('dashboard_admin_setting_mail_server_test') }}" class="btn btn-outline-primary btn-sm">
                            {{ 'Test the mail server configuration'|trans }}
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        {% include "global/message.html.twig" with { type: "info", icon: "bi bi-exclamation-circle", message: ("The fields preceded with a red * are mandatory"|trans) } %}
                    </div>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                        {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
