<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>{{ knp_pagination_sortable(rows, '#', 'r.id') }}</th>
				<th>{{ 'Name'|trans }}</th>
				<th>{{ 'Order of appearance'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for paymentgateway in rows %}
				{% set link = path('dashboard_admin_setting_payment_gateways_new', { slug : paymentgateway.slug }) %}
				<tr>
					<td>
						<a href="{{ link }}" class="text-inherit">
							<div class="d-flex align-items-center">
								<div>
									<img src="{{ asset(paymentgateway.getLogoPath) }}" alt="{{ paymentgateway.name }}" class="img-4by3-lg rounded">
								</div>
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">{{ paymentgateway.name }}</h4>
									<span>
										{{ 'Published the'|trans }}
										{{ paymentgateway.createdAt ? paymentgateway.createdAt | format_date('long') : '' }}
									</span>
								</div>
							</div>
						</a>
					</td>
					<td>{{ paymentgateway.number }}</td>

					<td>
						{% if paymentgateway.isOnline == false %}
							<span class="badge bg-danger-soft">
								<i class="bi bi-eye-slash"></i>
								{{ "Offline"|trans }}
							</span>
						{% else %}
							<span class="badge bg-success-soft">
								<i class="bi bi-eye"></i>
								{{ "Online"|trans }}
							</span>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="bi bi-pencil dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
