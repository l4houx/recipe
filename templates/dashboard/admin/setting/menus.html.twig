{% extends 'admin.html.twig' %}

{% set pagetitle = 'Manage menus'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "current":(pagetitle) }] %}
                {% include "global/admin-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    <a href="" class="btn btn-primary me-2">{{ 'Create'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="d-lg-flex justify-content-between align-items-center card-header">
                    <div class="mb-3 mb-lg-0">
                        <h3 class="mb-0">{{ pagetitle }}</h3>
                        <span></span>
                    </div>
                    <div>
                        <a href="" class="btn btn-outline-primary btn-sm">
                            {{ 'Create'|trans }}
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if rows | length %}
                        {% include "dashboard/admin/setting/manage-menus-table.html.twig" with {rows: rows} %}
                    {% else %}
                        <div class="card-footer">
                            {% include "global/message.html.twig" with { type: "dark", message: ('No menus found'|trans), icon: "bi bi-exclamation-circle", class: "my-2" } %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
