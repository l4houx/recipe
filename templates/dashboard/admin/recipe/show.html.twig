{% extends 'admin.html.twig' %}

{% set pagetitle = 'Recette :' ~ recipe.title %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_admin_recipe_index": 'Recettes', "current":(pagetitle) }] %}
                {% include "global/admin-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    <a href="{{ path('dashboard_admin_recipe_index') }}" class="btn btn-outline-secondary">Revenir à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="col-lg-12 col-md-12 col-12">
        <div class="card mb-4">
            <div class="table-responsive border-0 overflow-y-hidden">
                <table class="table mb-0 text-nowrap table-centered table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ recipe.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ recipe.title }}</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>{{ recipe.slug }}</td>
                        </tr>
                        <tr>
                            <th>Content</th>
                            <td>{{ recipe.content | nl2br }}</td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ recipe.updatedAt ? recipe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Duration</th>
                            <td>{{ recipe.duration }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="{{ path('dashboard_admin_recipe_index') }}" class="btn btn-outline-secondary btn-sm">
                    Revenir à la liste
                </a>
                <a href="{{ path('dashboard_admin_recipe_edit', {'id': recipe.id}) }}" class="btn btn-outline-warning btn-sm">
                    Modifier
                </a>
                {{ include('dashboard/admin/recipe/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
