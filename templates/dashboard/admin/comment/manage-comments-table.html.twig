<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
                <th>#</th>
				<th>{{ 'Author'|trans}}</th>
                <th>{{ 'Content'|trans }}</th>
				<th>{{ 'IP adress'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for comment in rows %}
                {# {% set link2 = path('dashboard_admin_comment_edit', { id : comment.id }) %} #}
				<tr>
                    <td>{{ comment.id }}</td>
					<td>
						<a href="{{ path('user_profil', { slug : comment.author.slug }) }}" class="text-inherit" target="_blank">
							<div class="d-flex align-items-center">
								<div>
									{% include "global/user-avatar.html.twig" with { user: comment.author, type: "xl" } %}
								</div>
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">
										{{ comment.author.username }}
									</h4>
									<span>
										{{ 'Published'|trans }}
										{{ comment.publishedAt ? comment.publishedAt | ago() : '' }}
									</span>
								</div>
							</div>
						</a>
					</td>
                    <td>
                        {% if comment.venue or comment.post %}
                            {% if comment.venue %}
                                {% set link = path('venue', { slug : comment.venue.slug } , "#c" ~ comment.id) %}
                            {% elseif comment.post %}
                                {% set link = path('post_article', { slug : comment.post.slug } , "#c" ~ comment.id) %}
                            {% endif %}
                        {% endif %}
						<a href="{{ link }}" class="text-inherit" target="_blank">
							<div class="mt-4">
								<div>
                                    {% if comment.venue or comment.post %}
                                        {% if comment.venue %}
                                            <span class="mb-1 text-primary-hover">
                                                {{ "Venue"|trans ~ ": " ~ comment.venue }}
                                            </span>
                                        {% elseif comment.post %}
                                            <span class="mb-1 text-primary-hover">
                                                {{ "Article"|trans ~ ": " ~ comment.post }}
                                            </span>
                                        {% endif %}
                                    {% endif %}
                                    <p class="text-decoration-none">
                                        {{ 'Description :'|trans }}
                                        {{ comment.content | html_markdown_excerpt(40) }}
                                    </p>
								</div>
							</div>
						</a>
					</td>
					<td>
						<a href="https://ipinfo.io/{{ comment.ip }}" target="_blank">{{ comment.ip }}</a>
						{% if comment.ip %}
							{{ ipService.getLocation(comment.ip).emoji ?? '' }}
						{% endif %}
                    </td>
					<td>
						{% if comment.isApproved == false %}
							<span class="badge bg-danger-soft">
								<i class="bi bi-eye-slash"></i>
								{{ "Refused"|trans }}
							</span>
						{% else %}
							<span class="badge bg-success-soft">
								<i class="bi bi-eye"></i>
								{{ "Approved"|trans }}
							</span>
						{% endif %}
						{% if comment.isRGPD == false %}
							<span class="badge bg-warning-soft">
								<i class="bi bi-slash-circle"></i>
								{{ "Disabled rgpd"|trans }}
							</span>
						{% else %}
							<span class="badge bg-secondary-soft">
								<i class="bi bi-check-circle"></i>
								{{ "Enabled rgpd"|trans }}
							</span>
						{% endif %}
					</td> 
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
                                {#
								<a class="dropdown-item" href="{{ link2 }}">
									<i class="bi bi-pencil dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
                                #}
                                {% if comment.isApproved == true %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_comment_hide', { id : comment.id }) }}">
                                        <i class="bi bi-eye-slash dropdown-item-icon"></i>
                                        {{ "Refused"|trans }}
                                    </a>
                                {% else %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_comment_show', { id : comment.id }) }}">
                                        <i class="bi bi-eye dropdown-item-icon"></i>
                                        {{ "Approved"|trans }}
                                    </a>
                                {% endif %}
								<a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-comment-delete-form').submit();" class="dropdown-item">
									<i class="bi bi-trash dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-comment-delete-form" action="{{ path('dashboard_admin_comment_delete', {id: comment.id}) }}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('comment_deletion_' ~ comment.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="card-footer">
		{{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
	</div>
</div>
