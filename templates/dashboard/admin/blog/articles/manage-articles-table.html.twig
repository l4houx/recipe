<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>{{ knp_pagination_sortable(rows, '#', 'p.id') }}</th>
				<th>{{ 'Title'|trans}}</th>
				<th>{{ 'Views'|trans }}</th>
				<th>{{ 'Last updated'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for post in rows %}
				{% set link = path('dashboard_admin_blog_edit', { id : post.id }) %}
				<tr>
					<td>{{ post.id }}</td>
					<td>
						<a href="{{ link }}" class="text-inherit">
							<div class="d-flex align-items-center">
								<div>
									<img src="{{ post.thumbnail ? asset(post.getThumbnailPath) : post.getThumbnailPlaceholder }}" alt="{{ post.title }}" class="img-4by3-lg rounded">
								</div>
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">{{ post.title }}</h4>
									<span>
										{{ 'Published the'|trans }}
										{{ post.createdAt ? post.createdAt | format_date('long') : '' }}
									</span>
								</div>
							</div>
						</a>
					</td>
					<td>
						<span class="text-decoration-none">{{ post.views }}
							{{ "views"|trans }}</span>
					</td>
					<td>{{ post.updatedAt ? post.updatedAt | ago() : '' }}</td>
					<td>
						{% if post.isOnline == false %}
							<span class="badge bg-danger-soft">
								<i class="bi bi-eye-slash"></i>
								{{ "Offline"|trans }}
							</span>
						{% else %}
							<span class="badge bg-success-soft">
								<i class="bi bi-eye"></i>
								{{ "Online"|trans }}
							</span>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ path('dashboard_admin_blog_show', {'id': post.id}) }}">
									<i class="bi bi-eye dropdown-item-icon"></i>
									{{ 'Show'|trans }}
								</a>
								<a class="dropdown-item" href="{{ link }}">
									<i class="bi bi-pencil dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a href="#" onclick="event.preventDefault(); confirm("{{ 'Are you sure you want to delete this item?'|trans }}") && document.getElementById('js-post-delete-form').submit();" class="dropdown-item">
									<i class="bi bi-trash dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-post-delete-form" action="{{ path('dashboard_admin_blog_delete', {id: post.id}) }}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('post_deletion_' ~ post.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
