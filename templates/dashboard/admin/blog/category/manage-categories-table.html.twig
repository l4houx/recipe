<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>{{ knp_pagination_sortable(rows, '#', 'c.id') }}</th>
				<th>{{ 'Name'|trans }}</th>
				<th>{{ 'Blog posts count'|trans }}</th>
				<th>{{ 'Color'|trans }}</th>
				<th>{{ 'Last updated'|trans }}</th>
                <th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for postcategory in rows %}
				{% set link = path('dashboard_admin_blog_category_edit', { slug : postcategory.slug }) %}
				<tr>
					<td>{{ postcategory.id }}</td>
					<td>
						<a href="{{ link }}" class="text-inherit">
							<div class="d-flex align-items-center">
								<div class="ms-3">
									<h4 class="mb-1 text-primary-hover">
										{% if postcategory.parent is not  null %}
											{{ postcategory.parent.name }}
											<i class="bi bi-chevron-right"></i>
											{% if postcategory.parent.parent is not  null %}
												{{ postcategory.parent.parent.name }}
												<i class="bi bi-chevron-right"></i>
											{% endif %}
										{% endif %}
                                        {{ postcategory.name }}
                                    </h4>
									<span>
										{{ 'Published the'|trans }}
										{{ postcategory.createdAt ? postcategory.createdAt | format_date('long') : '' }}
									</span>
								</div>
							</div>
						</a>
					</td> 
                    <td>
                        <span class="text-decoration-none">{{ postcategory.posts|length }}</span>
                    </td>
					<td>
						<span class="text-decoration-none" style="color: {{ postcategory.color }}">
                            {{ postcategory.name }}
                        </span>
					</td>
					<td>{{ postcategory.updatedAt ? postcategory.updatedAt | ago() : '' }}</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="bi bi-three-dots-vertical"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="bi bi-pencil dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
                                <a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-post-category-delete-form').submit();" class="dropdown-item">
                                    <i class="bi bi-trash dropdown-item-icon"></i>
                                    {{ 'Delete'|trans }}
                                </a>
                                <form id="js-post-category-delete-form" action="{{ path('dashboard_admin_blog_category_delete', {slug: postcategory.slug}) }}" method="post" class="">
                                    <input type="hidden" name="_token" value="{{ csrf_token('post_category_deletion_' ~ postcategory.slug) }}">
                                    <input type="hidden" name="_method" value="DELETE">
                                </form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
