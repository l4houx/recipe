{% extends 'dashboard.html.twig' %}

{% set pagetitle = 'Email'|trans %}
{% block title pagetitle %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.dashboard {
			padding: 0 !important;
			display: grid;
			grid-template-columns: 1fr 1fr;
		}
		.dashboard iframe {
			width: 100%;
			height: 100vh;
		}
		@media screen and(max-width: 1200px) {
			.dashboard {
				padding: 0 !important;
				display: grid;
				grid-template-columns: 1fr;
			}
			.dashboard iframe {
				height: 50vh;
			}
		}
	</style>
{% endblock %}

{% block content %}
	<iframe src="{{ path('dashboard_admin_email_mail', {format: 'html'}) }}" frameborder="0"></iframe>
	<iframe src="{{ path('dashboard_admin_email_mail', {format: 'text'}) }}" frameborder="0"></iframe>

{% endblock %}
