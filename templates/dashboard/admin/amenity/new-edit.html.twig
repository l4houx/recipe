{% extends 'dashboard.html.twig' %}

{% set pagetitle = 'Add a new amenity' | trans %}
{% if amenity.id %}{% set pagetitle = 'Update the amenity' | trans %}{% endif %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard'|trans), "dashboard_admin_amenity_index": 'Manage amenites'|trans, "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    {% if is_granted('ROLE_VERIFIED') %}
                        <a href="{{ path('dashboard_admin_amenity_index') }}" class="btn btn-outline-secondary me-2">
                            {{ 'Return to list'|trans }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-9 col-lg-8 col-md-12 col-12">
            {{ include('dashboard/admin/amenity/_form.html.twig') }}
        </div>
        <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
    </div>
{% endblock %}
