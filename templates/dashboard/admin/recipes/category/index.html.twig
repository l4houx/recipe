{% extends 'dashboard.html.twig' %}

{% set pagetitle = 'Manage recipe categories'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    {% if is_granted('ROLE_VERIFIED') %}
                        <a href="{{ path('dashboard_admin_recipe_category_new') }}" class="btn btn-primary me-2">{{ 'Create'|trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <form class="p-4 row g-3">
        <div class="col-xxl-5 col-lg-5 col-md-12 col-12 mb-2 mb-lg-0">
            <div class="d-flex align-items-center">
                <span class="position-absolute ps-3 search-icon">
                    <i class="bi bi-search"></i>
                </span>
                <input type="search" name="keyword" value="{{ app.request.get('keyword') }}" class="form-control ps-6" placeholder="{{ 'Search...'|trans }}">
            </div>
        </div>
        <div class="col-xxl-4 col-lg-4 col-md-12 col-12 mb-2 mb-lg-0">
            <div class="col-auto">
                <label class="col-auto col-form-label">{{ "Featured"|trans }}</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="featured" id="featured-filter-all" value="all">
                    <label class="form-check-label" for="featured-filter-all">{{ "All"|trans }}</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="featured" id="featured-filter-yes" value="1">
                    <label class="form-check-label" for="featured-filter-yes">{{ "Yes"|trans }}</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="featured" id="featured-filter-no" value="0">
                    <label class="form-check-label" for="featured-filter-no">{{ "No"|trans }}</label>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-lg-3 col-md-12 col-12">
            <div class="row justify-content-lg-end">
                <label class="col-auto col-form-label">{{ "Sort by"|trans }}</label>
                <div class="col-auto">
                    <select class="form-select" aria-label="{{ "Select an option"|trans }}">
                        <option value="">{{ knp_pagination_sortable(rows, "Creation date"|trans ~ ' (' ~ "desc"|trans ~ ')', "c.createdAt", {"direction": "desc", "criteria": "c.createdAt"}) }}</option>
                        <option value="">{{ knp_pagination_sortable(rows, "Creation date"|trans ~ ' (' ~ "asc"|trans ~ ')', "c.createdAt", {"direction": "asc", "criteria": "c.createdAt"}) }}</option>
                        <option value="">{{ knp_pagination_sortable(rows, "Featured order"|trans ~ ' (' ~ "desc"|trans ~ ')', "c.featuredorder", {"direction": "desc", "criteria": "c.featuredorder"}) }}</option>
                        <option value="">{{ knp_pagination_sortable(rows, "Featured order"|trans ~ ' (' ~ "asc"|trans ~ ')', "c.featuredorder", {"direction": "asc", "criteria": "c.featuredorder"}) }}</option>
                    </select>
                </div>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-1">
                        {{ "%resultsCount% result(s) found"|trans({'%resultsCount%': rows.getTotalItemCount}) }}
                    </h4>
                    <p class="mb-0"></p>
                </div>
                {% if rows.getTotalItemCount > 0 %}
                    {% include "dashboard/admin/recipes/category/manage-categories-table.html.twig" with {rows: rows} %}
                    <div class="card-footer">
                        {{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
                    </div>
                {% else %}
                    <div class="card-footer">
                        {% include "global/message.html.twig" with { type: "dark", message: ('No categories found'|trans), icon: "bi bi-exclamation-circle", class: "my-2" } %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            if (getURLParameter('isFeatured')) {
                $('input[type="radio"][name="isFeatured"][value="' + getURLParameter('isFeatured') + '"]').attr("checked", "checked");
            }
        });
    </script>
{% endblock %}
