{% extends 'base.html.twig' %}

{% block body %}
    <div id="db-wrapper">
        {% include "global/dashboard-items-navbar-vertical.html.twig" %}
        <main id="page-content">
            {% include "global/dashboard-page-header.html.twig" %}
            <section class="container-fluid p-4">
                {% block breadcrumb '' %}
                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                    <div class="row">
                        <div class="col-12 mb-2">
                            {% include "global/message.html.twig" with { close: "close", type: 'warning', icon: 'bi bi-exclamation-circle', message: ('You are connected as "%username%'|trans({'%username%' : app.user.username})~ '", <a href="'~ path('dashboard_main', {'_switch_user': '_exit'}) ~'">' ~ 'Click here'|trans ~ '</a> ' ~ 'to return to your dashboard'|trans) } %}
                        </div>
                    </div>
                {% endif %}
                {% block content '' %}
            </section>
        </main>
    </div>
{% endblock %}
