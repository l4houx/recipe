{% extends 'base.html.twig' %}

{% block layout %}{{ parent() }} dashboard{% endblock %}

{% block body %}
    {% block header %}
        {% include "global/_header.html.twig" %}
    {% endblock %}
    <main>
        <section class="pt-5 pb-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                        <div class="rounded-top" style="background: url({{ asset('images/background/profile-bg.jpg') }}) no-repeat; background-size: cover; height: 100px"></div>
                        <div class="card px-4 pt-2 pb-4 shadow-sm rounded-top-0 rounded-bottom-0 rounded-bottom-md-2">
                            <div class="d-flex align-items-end justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="me-2 position-relative d-flex justify-content-end align-items-end mt-n5">
                                        {% include "global/user-avatar.html.twig" with { user: app.user, type: "xl", class: "position-relative border-white border border-4" } %}
                                        {% include 'global/user-verified.html.twig' with { user: app.user } %}
                                    </div>
                                    <div class="lh-1">
                                        <div class="d-flex align-items-center">
                                            <h2 class="mb-0 fw-bold me-2">{{ app.user.username }}</h2>
                                            {% include 'global/user-badge.html.twig' with { user: app.user } %}
                                        </div>
                                        <span class="mb-0 d-block fs-6">
                                            {{ 'Member since the'|trans }} {{ app.user.createdAt | format_date('long') }}
                                        </span>
                                    </div>
                                </div>
                                {{ component('btn_account') }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-0 mt-md-4">
                    <div class="col-lg-3 col-md-4 col-12">
                        <nav class="navbar navbar-expand-md shadow-sm mb-4 mb-lg-0 sidenav">
                            {% include "dashboard/shared/global/sidebar-links.html.twig" %}
                        </nav>
                    </div>
                    <div class="col-lg-9 col-md-8 col-12">
                        {% block content '' %}
                    </div>
                </div>
            </div>
        </section>
    </main>
    {% block footer %}
        {% include "global/_footer-2.html.twig" %}
    {% endblock %}
{% endblock %}
