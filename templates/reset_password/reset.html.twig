{% extends 'auth.html.twig' %}

{% block layout %}{{ parent() }} reset{% endblock %}

{% set pagetitle = "Reset your password"|trans %}
{% block title pagetitle %}

{% block content %}
    <div class="mb-4">
        <a href="{{ path('home') }}">
            <img src="{{ asset('images/brand/logo/logo-icon.svg') }}" class="mb-4" alt="logo-icon">
            {# <img src="{{ asset(settings.getAppLayoutSettings.getLogoPath) }}" alt="{{ website_name }}" class="mb-4"> #}
        </a>
        <h1 class="mb-1 fw-bold">{{ pagetitle }}</h1>
        <p>{{ 'Complete the form to reset your password.'|trans }}</p>
    </div>
    {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
        <div class="mb-3">
            {{ form_row(resetForm.plainPassword) }}
        </div>
        <div class="mb-3 d-grid">
            <button type="submit" class="btn btn-primary">{{ 'Send reset link'|trans }}</button>
        </div>
        <span>
            {{ 'Return to'|trans }}
            <a href="{{ path('login') }}">{{ 'log in'|trans }}</a>
        </span>
    {{ form_end(resetForm) }}
{% endblock %}
