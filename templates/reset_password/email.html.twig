{% extends 'email.html.twig' %}

{% block body %}
    <h1>{{ 'Hi!'|trans }}</h1>

    <p>{{ 'To reset your password, please visit the following link'|trans }}</p>

    <a href="{{ url('reset_password', {token: resetToken.token}) }}">
        {{ url('reset_password', {token: resetToken.token}) }}
    </a>

    <p>
        {{ 'This link will expire in'|trans }}
        {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
    </p>

    <p>{{ 'Cheers!'|trans }}</p>
{% endblock %}
